mixin s-new()
	// start s-new
	+b.SECTION.s-new.section#s-new&attributes(attributes)
		.container
			h2 Новинки
			+e.slider-wrap
				+e.slider--js
					mixin new-slide()
						.slick-slide
							+e.item
								a(href='')
									+e.icon-wrap
										+e.icon-btn.btn
											+icon('heart')
										+e.icon-btn.btn
											+icon('compare')
									+e.img-wrap.bg-wrap
										img.bg-img(src='img/@2x/new1.jpg' alt='')
									+e.item-title Приталенное подростковое платье MEVIS 3137-02
									+e.item-order
										+e.item-price 420 грн.
										+e.item-btn.btn.btn-primary в корзину
					+new-slide()
					+new-slide()
					+new-slide()
					+new-slide()
					+new-slide()
					+new-slide()
				+e.slider-dots
	// end s-new